class Player:
    def __init__(self, name, playerID, gameMode):
        self.name = name
        self.playerID = playerID
        self.gameMode = gameMode

    def getName(self):
        return self.name

    def setName(self, name):
        self.name = name

    def getID(self):
        return self.playerID

    def setID(self, playerID):
        self.playerID = playerID

    def getGameMode(self):
        return self.gameMode

